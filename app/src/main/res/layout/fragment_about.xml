<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/about_fragment"
    tools:context=".AboutFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="OM OS"
        android:textColor="@color/subBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="344dp"
        android:layout_height="447dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Scheel-Larsen er et gammelt familieejet selskab, der har eksisteret siden 1924. Grundlæggeren var min farfar Henry Scheel-Larsen, der åbnede isenkramforretningen Scheel-Larsen på hjørnet af Duntzfelts Alle og Strandvejen i Hellerup. \n\n Fra 2011 har min kone og jeg videreført forretningen Scheel-Larsen under navnet 'Scheel-Larsen Krukker- &amp; Havemøbler ApS', og viderefører de værdier, som altid har kendetegnet Scheel-Larsen, nemlig: \n\n at levere de bedste produkter til den bedste pris, og samtidig yde vore kunder den ypperste og mest professionelle service. \n\n Endvidere har vi tilført lidt af den gamle service anno 1924, \n\n -  Ved køb af varer over 1.000 kr. hos Scheel-Larsen leverer og samler vi GRATIS på hele Sjælland \n\n -  Ved køb af varer over 3.000 kr. er levering fragtfrit til Jylland og Fyn"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="287dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>